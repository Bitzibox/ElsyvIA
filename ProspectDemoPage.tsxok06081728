    // ‚úÖ NOUVEAUT√â : Logique de calcul et de formatage du ROI
    const handleRoiInputChange = (e: React.ChangeEvent<HTMLInputElement>) => {
        const { name, value } = e.target;
        setRoiInputs(prev => ({ ...prev, [name]: value }));
    };

    const handleRoiCalculate = (e: React.FormEvent) => {
        e.preventDefault();
        const { employees, hoursPerWeek, hourlyCost } = roiInputs;
        const numEmployees = parseFloat(employees);
        const numHours = parseFloat(hoursPerWeek);
        const numCost = parseFloat(hourlyCost);

        if (isNaN(numEmployees) || isNaN(numHours) || isNaN(numCost) || numEmployees <= 0 || numHours <= 0 || numCost <= 0) {
            setGeneratedPlan(`# üö´ Donn√©es Invalides\n\nVeuillez remplir tous les champs avec des nombres positifs pour lancer le calcul.`);
            return;
        }

        // Hypoth√®se : l'IA d'Elsyvia peut automatiser 80% de ces t√¢ches
        const automationEfficiency = 0.8;

        const weeklyHoursSaved = numEmployees * numHours * automationEfficiency;
        const monthlyHoursSaved = weeklyHoursSaved * 4.33;
        const annualHoursSaved = monthlyHoursSaved * 12;

        const weeklyMoneySaved = weeklyHoursSaved * numCost;
        const monthlyMoneySaved = monthlyHoursSaved * numCost;
        const annualMoneySaved = annualHoursSaved * numCost;
        
        const formatCurrency = (value: number) => new Intl.NumberFormat('fr-FR', { style: 'currency', currency: 'EUR' }).format(value);

        const resultText = `
# üí∞ R√©sultat du Calculateur de ROI

